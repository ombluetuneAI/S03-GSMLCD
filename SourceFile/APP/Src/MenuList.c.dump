	DeleteRemote.SubMenus[2]=&RemoteConfig;
	DeleteRemote.Parent=&RemoteConfig;
	
	DeleteRemoteList[0].SubMenus=malloc(sizeof(DeleteRemoteList[0])*8);
	for(i=0;i<8;i++)
