void MenuListInit(void)
{
	MainMenu.SubMenus = malloc(sizeof(&MainMenu)*1);

	MainMenu.SubMenus[0]=&IconMenu;//下一个节点
	MainMenu.Parent=NULL;//到顶了
	
	IconMenu.SubMenus = malloc(sizeof(&IconMenu)*6);
	IconMenu.SubMenus[0] =&PhoneMenu;
	IconMenu.SubMenus[1] =&LogList;
	IconMenu.SubMenus[2] =&SecurityList;
	IconMenu.SubMenus[3] =&SetupMenu;
	IconMenu.SubMenus[4] =&VoiceList;
	IconMenu.SubMenus[5] =&DefenseList;
	IconMenu.Parent=&MainMenu;
	
	MenuSetup();
	
	MenuPhone();	


	MenuSecurity();
	
	MenuZone();
	
	MenuLog();
	
	MenuVoice();
	
	CurrentMenu =& MainMenu;
}


